<div class="row justify-space-between-md w3-container w3-center w3-animate-top" id="signup-style">
 <div class="login-card1" >
    <h2 class="page-title">Sign Up Now!</h2>
    <hr>
    <form class="form signup-form">
      <div class="form-group">
        <p id="username-signup1">Username</p>
        <input class="form-input" type="text" id="username-signup" />
      </div>
      <div class="form-group">
        <p id="email-signup1">Email</p>
        <input class="form-input" type="text" id="email-signup" />
      </div>
      <div class="form-group">
        <p id="password-signup1">Password</p>
        <input class="form-input" type="password" id="password-signup" />
      </div>

      <p id="validation-message"></p>
      <input type="checkbox" onclick="showPassword()" id="show-password"/>
      <label for="show-password" id="showpass">Show Password</label>
      <div class="form-group">
        <button class="btn btn-primary" type="submit" id="submit-button">Sign Up</button>
      </div>

       <a href="/login" style="font-style: italic;">Already have an account? Login In Here!</a>
      <hr>

      <p>Made by JP Padilla</p>

      <a href="/" style="font-style: italic;">Return home?</a><br>
    </form>
  </div>
  </div>

<script src="./js/signup.js"></script>