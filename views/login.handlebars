      <input type="checkbox" onclick="showPassword()" id="show-password"/>
      <label for="show-password" id="showpass">Show Password</label>

      <div class="form-group">
        <button class="btn btn-primary" type="submit" id="submit-button">Login</button>
      </div>

        <a href="/signup" style="font-style: italic;">New User? Sign Up Here!</a>
      
