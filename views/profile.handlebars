<header class="statcard statcard-success p-4 mb-4" id="header-title">
  <nav>
    <a class="statcard-desc" id="web-title">Software Engineer Blogspot</a>
    </nav>
</header>
   
  <ul class="userList">
    <div id="game-title">
        <a id="game-title1" aria-disabled="true" disabled>{{user.firstName}} {{user.lastName}}</a>
    </div>
    <div class="form-group1">
    <form id="profileImageForm" enctype="multipart/form-data">
        <input type="file" name="profileImage" id="profileImageInput" style="display: none;" onchange="uploadProfileImage(event)" />
        <div class="profile-image-container">
            {{#if user.profileImage}}
        <img src="/images/{{user.profileImage}}" id="blank-profile" onclick="chooseProfileImage()" />
            {{else}}
        <img src="/images/blank-profile.png" id="blank-profile" onclick="chooseProfileImage()" />
        {{/if}}
        <div class="overlay-message">
        Upload New Photo
        </div>
      </div>
    </form>
    </div>
    <div id="game-title6" style="display:none;">
        <div id="game-title1" aria-disabled="true" disabled>
            <p id="card-tile1">
            {{#if user.username}}
            <p id="review-title1">Username:</p>
            <p id="review-title">{{user.username}}</p>
            <p id="review-title1">Email:</p>
            <p id="review-title">{{user.email}}</p>
          {{/if}}
          </p>   
        </div>
    </div>
     

    <!-- Section for navigation buttons -->
    <div id="game-title3">
        <div id="game-title1" aria-disabled="true" disabled>
          <div class="dropdown1">
            <a class="btn btn-outline-info mr-sm-2 logout-button1" type="button" id="dropdownMenu2"  aria-haspopup="true" aria-expanded="false">Logout</a>
          </div>
          <div class="dropdown1">
            <a class="btn btn-outline-info mr-sm-2 logout-button1" type="button" id="dropdownMenu3" aria-haspopup="true" aria-expanded="false">Create Post</a>
          </div>
          <div class="dropdown1">
            <a class="btn btn-outline-info mr-sm-2 logout-button1" type="button" id="dropdownMenu4" aria-haspopup="true" aria-expanded="false">User Info</a>
          </div>
          <div class="dropdown1">
            <a href="/profile" class="btn btn-outline-info mr-sm-2 logout-button1" type="button" id="dropdownMenu2" aria-haspopup="true" aria-expanded="false">Profile</a>
          </div>
          <div class="dropdown1">
            <a href="/feed" class="btn btn-outline-info mr-sm-2 logout-button1" type="button" id="dropdownMenu2" aria-haspopup="true" aria-expanded="false">Feed</a>
          </div>
        </div>
    </div>

    <!-- Section for writing a review or post -->
     <div id="game-title4">
        <a id="game-title1" aria-disabled="true" disabled>
          <h2 class="page-title">Create A Post</h2>
          <hr>
          <form class="form review-form" enctype="multipart/form-data">
            <div class="form-group2">
              <p id="review-topic1">Topic</p>
              <input type="text" id="review-topic" placeholder="Title"/>
            </div>

            <div class="form-group">
              <p id="password-signup1">Import Photo</p>
                <input type="file" id="postImage" name="postImage" onchange="previewImage(event)" placeholder="Only Supports .jpg, .png, .jfif"/>
                <img id="imagePreview" src="#" alt="Image Preview" style="display: none; max-width: 100%; max-height: 200px;">
            </div>
            
            <div class="form-group2">
              <p id="review-description1">Description</p>
              <textarea rows="5" cols="33" type="text" id="review-description" placeholder="What is on your mind?"></textarea>
            </div>
              
              <hr>
            <p id="validation-message"></p>
            <div class="form-group2">
              <button class="btn btn-primary" type="submit" id="submit-button">Post</button>
              <button class="btn btn-primary" type="submit" id="submit-button1">Cancel</button>
            </div>
            
          </form>
        </a>
    </div>

    <!-- Sections to display reviews -->
{{#if userReviewData.length}}
  {{#each userReviewData}}
    <div class="card" id="game-title">
      <form class="delete-review" data-review-id="{{id}}">
          <button type="submit" class="delete-button">Delete Post</button>
      </form>
     <img src="/images/{{../user.profileImage}}" id="blank-profile3" />
      <a style="font-size: 25px;">{{../user.username}}</a>
      <div class="card" id="game-title5">
        <h3 id="topic-display">{{ topic }}<span style="float: right; margin-right: 10px;">{{createdAt}}</span></h3>
        <hr>
         <img src="/reviewImages/{{ postImage }}" id="review-image" />
        <hr>
        <form class="delete-review1" >
          <a type="submit" class="delete-button3">Write a Comment</a>
          <a href="/comments/{{this.id}}" type="button" class="delete-button2">View Comments</a>
        </form>
        <h3 id="description-display"><span style="font-style: italic; margin-right: 15px; color:rgb(6, 9, 109); font-weight: bold; ">{{../user.username}}:</span>{{ description }}</h3>
        <form class="form-group5">
          <input type="text" class="comment-section1" placeholder="Write a Comment....."/>
          <input type="hidden" name="reviewId" value="{{this.id}}">
          <button class="btn btn-primary" type="submit" id="submit-button3">Post</button>
        </form>
      </div>
    </div>
  {{/each}}
  <a href="#top" class="go-top-button">Go Back to the Top</a>
{{else}}
 <div class="card" id="game-title">
  <p>Create Your First Post!</p>
 </div>
{{/if}}

<script type="text/javascript" src="/js/profile.js"></script>