<header class="statcard statcard-success p-4 mb-4" id="header-title">
  <nav>
    <a class="statcard-desc" href="/" id="web-title">Software Engineer Blogspot</a>
    <div class="navigation-bar">
    <form class="form-inline my-2 my-lg-4"></form>
        <div class="dropdown">
          <a class="btn btn-outline-info mr-sm-2 logout-button" type="button" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Logout</a>
        </div>
        <div class="dropdown">
          <a class="btn btn-outline-info mr-sm-2 logout-button" type="button" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Explore</a>
        </div>
         <div class="dropdown">
          <a href="/profile" class="btn btn-outline-info mr-sm-2 logout-button" type="button" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Profile</a>
        </div>
        <div class="dropdown">
          <a href="/home" class="btn btn-outline-info mr-sm-2 logout-button" type="button" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Feed</a>
        </div>
    </form>
    </nav>
</header>
   <div>
  <ul class="userList">
    <div id="game-title">
        <a id="game-title1" aria-disabled="true" disabled>{{user.firstName}} {{user.lastName}}</a>
    </div>
    <div class="form-group1">
    <form id="profileImageForm" enctype="multipart/form-data">
        <input type="file" name="profileImage" id="profileImageInput" style="display: none;" onchange="uploadProfileImage(event)" />
        <div class="profile-image-container">
            {{#if user.profileImage}}
        <img src="/images/{{user.profileImage}}" id="blank-profile" onclick="chooseProfileImage()" />
            {{else}}
        <img src="/images/blank-profile.png" id="blank-profile" onclick="chooseProfileImage()" />
        {{/if}}
        <div class="overlay-message">
        Upload New Photo
        </div>
  </div>
</form>
      <li id="card-tile">
        <p id="card-tile1">
          {{#if user.username}}
            <p id="review-title1">Username:</p>
            <p id="review-title">{{user.username}}</p>
            <p id="review-title1">Email:</p>
            <p id="review-title">{{user.email}}</p>
          {{/if}}
        </p>   
      </li>
    </div>
  </ul>
</div>

<script type="text/javascript" src="./js/profile.js"></script>